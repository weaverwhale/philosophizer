{
  "name": "philosophizer",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:debug": "bun --inspect --watch src/index.ts",
    "start": "bun src/index.ts",
    "start:docker": "PORT=80 docker compose up -d",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postgres": "docker compose up -d postgres",
    "postgres:schema": "docker compose exec -T postgres psql -U postgres -d philosophizer < src/db/schema.sql",
    "postgres:setup": "bun run db && sleep 3 && bun run db:schema",
    "postgres:reset": "docker compose stop postgres && docker volume rm philosophizer_postgres-data && bun run db:setup",
    "pgvector:backup": "./scripts/backup-pgvector.sh",
    "pgvector:restore": "./scripts/restore-pgvector.sh",
    "pgvector:publish": "./scripts/publish-pgvector.sh mjweaver01/philosophizer-pgvector",
    "pgvector:bp": "bun run pgvector:backup && bun run pgvector:publish",
    "rag:index": "bun run src/rag/scripts/indexTexts.ts",
    "rag:clear": "bun run src/rag/scripts/indexTexts.ts --clear"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^10.0.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.0-beta.54",
    "@ai-sdk/react": "^3.0.0-beta.93",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pg": "^8.11.10",
    "ai": "^6.0.0-beta.93",
    "bcryptjs": "^2.4.3",
    "bun-plugin-tailwind": "^0.1.2",
    "dotenv": "^16.4.7",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "playwright": "^1.49.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "streamdown": "^1.6.10",
    "tailwindcss": "^4.1.16",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  }
}
